# TaxPoynt Platform Environment Configuration

# Application
NODE_ENV=production
APP_NAME=TaxPoynt Platform
APP_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/taxpoynt_platform
REDIS_URL=redis://localhost:6379

# FIRS Integration
FIRS_API_URL=https://firs-api.gov.ng/api/v1
FIRS_SANDBOX_URL=https://sandbox-firs-api.gov.ng/api/v1
FIRS_CLIENT_ID=your_firs_client_id
FIRS_CLIENT_SECRET=your_firs_client_secret

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_char_encryption_key_here
API_KEY_SECRET=your_api_key_secret

# External Integrations
ODOO_API_URL=https://your-odoo-instance.com
ODOO_DATABASE=your_odoo_database
ODOO_USERNAME=your_odoo_username
ODOO_PASSWORD=your_odoo_password

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_API_KEY=your_analytics_key

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@taxpoynt.com
SMTP_PASSWORD=your_email_password

# Webhook URLs
WEBHOOK_BASE_URL=https://your-domain.com/webhooks
FIRS_WEBHOOK_SECRET=your_webhook_secret

# Deployment
RAILWAY_PROJECT_ID=your_railway_project_id
VERCEL_PROJECT_ID=your_vercel_project_id